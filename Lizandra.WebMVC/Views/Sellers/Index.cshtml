@model IEnumerable<Lizandra.WebMVC.Models.Seller>


@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Sellers</h2>

<a asp-action="Create">Create new Seller</a>

<table class="table table-hover">
    <thead>
    <tr>

        <th>
            @Html.DisplayNameFor(item => item.Name)
        </th>
        <th>
            @Html.DisplayNameFor(item => item.Email)
        </th>

        <th>
            @Html.DisplayNameFor(item => item.BaseSalary)
        </th>

        <th>
            @Html.DisplayNameFor(item => item.BirthDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>

</table>